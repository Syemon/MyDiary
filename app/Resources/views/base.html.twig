<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}MyDiary!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
            <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header class="header">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('diary_list') }}"><img class="logo-icon" src="{{ asset('images/diary.png') }}"></a>
            {% else %}
                <a href="{{ path('homepage') }}"><img class="logo-icon" src="{{ asset('images/diary.png') }}"></a>
            {% endif %}
            <h1 class="logo">MyDiary</h1>
            <ul class="navi">
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('diary_list') }}">Diary</a></li>
                    <li><a href="{{ path('admin_diaries_list') }}">Full diaries list</a></li>
                    <li><a href="{{ path('admin_users_list') }}">Users list</a></li>
                    <li><a href="{{ path('user_edit') }}">Edit</a></li>
                    <li><a href="{{ path('security_logout') }}">Logout</a></li>
                {% elseif is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('diary_list') }}">Diary</a></li>
                    <li><a href="{{ path('user_edit') }}">Edit</a></li>
                    <li><a href="{{ path('security_logout') }}">Logout</a></li>
                {% else %}
                    <li><a href="{{ path('security_login') }}">Login</a></li>
                {% endif %}
            </ul>
        </header>

        <div class="main-content">
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}

            {% for msg in app.session.flashBag.get('danger') %}
                <div class="alert alert-danger">
                    {{ msg }}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        <div class="footer">
            <p class="footer-text"></p>
            <div>Icons made by <a href="http://www.freepik.com" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div>

        </div>

        {% block javascripts %}
        {% endblock %}
    </body>
</html>
