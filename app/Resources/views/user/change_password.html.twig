{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ 'change_password'|trans }}</h1>

                {{ form_start(form) }}
                    {{ form_row(form.current_password, {
                        'label': 'form.current_password'
                    }) }}
                    {{ form_row(form.plainPassword.first, {
                        'label': 'form.new_password'
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label': 'form.new_password_confirmation'
                    }) }}

                    <button type="submit" class="btn btn-primary" formnovalidate>{{ 'edit'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}