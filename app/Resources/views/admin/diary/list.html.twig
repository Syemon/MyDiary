{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Diaries</h1>

                <table class="table table-striped">
                    <tr>
                        <th>User</th>
                        <th>Title</th>
                        <th>Note</th>
                        <th>Attachment</th>
                        <th>Date</th>
                    </tr>
                    {% for user in users %}
                        <tr>
                            {% for u in user.diary %}
                                <tr>
                                    <td>{{ user.email}}</td>
                                    <td>{{ u.title }}</td>
                                    <td>{{ u.note }}</td>
                                    <td>{{ u.attachment }}</td>
                                    <td>{{ u.createdat|date("m/d/Y") }}</td>
                                </tr>
                        {% endfor %}

                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}